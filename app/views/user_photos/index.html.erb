<div id="user_photos_index">
  <div class="ui fluid grid">
      <div class="ui text menu ten wide column">
        <div class="active header item">filter:</div>
        <%= form_tag :search_user_photos, method: :get, class: "field item" do %>
          <i class="calendar icon"></i> Date
          <%= text_field_tag "q", params[:q], id:"datepicker", class:"ui input item" %>
          <%= submit_tag "検索" %></p>
        <% end %>
        <a class="item">
          <i class="user icon"></i> User
        </a>
      </div>

    <div class="right floated six wide column">
      <%= paginate(@user_photos) %>
    </div>
   </div>

  <div class="ui five items">
      <% @user_photos.each do |user_photo| %>
      <div id="images" class="item">
        <div class="image user_photo" data-content=<%= user_photo.comment %>>
            <%= user_thumb_link_tag(user_photo) %>
        </div>
        <div class="content">
          <div class="name"><%=user_photo.title%></div>
          <%= link_to '編集', edit_user_photo_path(user_photo), "type"=>"button", "class"=>"btn btn-info btn-sm" %>
          <%= link_to '削除', user_photo, "type"=>"button", "class"=>"btn btn-info btn-sm",
                      method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
      <% end %>
    </div>

  <nav>
    <%= paginate(@user_photos) %>
  </nav>

  <div id="show_photo" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <% #render photo image.. %>
  </div>
</div>