<div id="devise-registrations-sign_up">

<%= form_for(resource, :as => resource_name, :url => user_auth_registration_path(resource_name) , html:{class:"ui form segment"}) do |f| %>

  <%= f.hidden_field :user_id %>

  <%= devise_error_messages! %>
  <strong>
  <% if notice.present? %>
            <div class="alert-info text-center"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
            <div class="alert-danger text-center"><%= alert %></div>
  <% end %>
  </strong>

  <h2 class="ui header">
    <div class="content">
      Sign up
      <div class="sub header">Connect with Email</div>
    </div>
  </h2>

    <div class="ui left icon input">
      <%= f.email_field :email, :autofocus => true, placeholder:"Email address" %>
      <i class="teal mail icon"></i>
    </div>
    <div class="ui left icon input">
      <%= f.password_field :password,  placeholder:"Password" %>
      <i class="red lock icon"></i>
    </div>
    <div class="ui left icon input">
      <%= f.password_field :password_confirmation, class:"form-control", placeholder:"Password Confirmation" %>
      <i class="lock icon"></i>
    </div>

    <div id="submit">
      <%= f.submit "Get Started", class:"ui green button" %>
    </div>
    <br>
    <p><%= link_to "Sign in", new_session_path(resource_name), class:"btn btn-xs btn-success" %> already have an account.</p>
<% end %>
</div>